<Window x:Class="HyTaLauncher.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Настройки"
        Height="350" Width="450"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner">

    <Border Background="{StaticResource BackgroundGradient}"
            CornerRadius="10"
            BorderBrush="{StaticResource BorderBrush}"
            BorderThickness="1">
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="36"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="36"/>
            </Grid.RowDefinitions>

            <!-- Title Bar -->
            <Border Grid.Row="0" 
                    Background="#08ffffff"
                    CornerRadius="10,10,0,0"
                    MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid>
                    <TextBlock Text="⚙ Настройки" 
                               FontSize="12"
                               FontWeight="Bold"
                               Foreground="{StaticResource TextSecondaryBrush}"
                               VerticalAlignment="Center"
                               Margin="12,0,0,0"/>
                    <Button Content="✕" 
                            Style="{StaticResource CloseButton}"
                            HorizontalAlignment="Right"
                            Click="CloseButton_Click"/>
                </Grid>
            </Border>

            <!-- Content -->
            <ScrollViewer Grid.Row="1" 
                          VerticalScrollBarVisibility="Auto"
                          Margin="20,15">
                <StackPanel>
                    
                    <!-- Game Directory -->
                    <TextBlock x:Name="GameDirLabel"
                               Text="GAME FOLDER"
                               FontSize="10"
                               FontWeight="Bold"
                               Foreground="{StaticResource TextSecondaryBrush}"
                               Margin="0,0,0,6"/>
                    <Grid Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBox x:Name="GameDirTextBox"
                                 Style="{StaticResource ModernTextBox}"
                                 IsReadOnly="True"
                                 FontSize="11"/>
                        <Button Grid.Column="1"
                                Content="..."
                                Width="40"
                                Margin="8,0,0,0"
                                Style="{StaticResource ModernButton}"
                                Padding="0,10"
                                Click="BrowseButton_Click"/>
                    </Grid>

                    <!-- Info -->
                    <Border Background="{StaticResource CardBackgroundBrush}"
                            CornerRadius="6"
                            Padding="12">
                        <StackPanel>
                            <TextBlock x:Name="InfoText"
                                       Text="HyTaLauncher v1.0.0"
                                       FontSize="11"
                                       Foreground="{StaticResource TextBrush}"/>
                            <TextBlock x:Name="InfoDescText"
                                       Text="Unofficial launcher for Hytale"
                                       FontSize="10"
                                       Foreground="{StaticResource TextSecondaryBrush}"
                                       Margin="0,4,0,0"/>
                        </StackPanel>
                    </Border>

                </StackPanel>
            </ScrollViewer>

            <!-- Buttons -->
            <StackPanel Grid.Row="2"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Margin="20,0">
                <Button x:Name="CancelBtn"
                        Content="Cancel"
                        Style="{StaticResource ModernButton}"
                        Background="{StaticResource CardBackgroundBrush}"
                        Padding="12,0"
                        FontSize="12"
                        Margin="0,0,8,8"
                        Click="CancelButton_Click"/>
                <Button x:Name="SaveBtn"
                        Content="Save"
                        Style="{StaticResource ModernButton}"
                        Padding="12,0"
                        FontSize="12"
                        Margin="0,0,0,8"
                        Click="SaveButton_Click"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
