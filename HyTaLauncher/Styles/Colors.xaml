<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- Green Fantasy Theme -->
    <Color x:Key="PrimaryColor">#0d1117</Color>
    <Color x:Key="SecondaryColor">#161b22</Color>
    <Color x:Key="AccentColor">#2ea043</Color>
    <Color x:Key="AccentHoverColor">#3fb950</Color>
    <Color x:Key="AccentDarkColor">#238636</Color>
    <Color x:Key="TextColor">#e6edf3</Color>
    <Color x:Key="TextSecondaryColor">#8b949e</Color>
    <Color x:Key="BorderColor">#30363d</Color>
    <Color x:Key="InputBackgroundColor">#0d1117</Color>
    <Color x:Key="CardBackgroundColor">#161b22</Color>
    
    <!-- Brushes -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PrimaryColor}"/>
    <SolidColorBrush x:Key="SecondaryBrush" Color="{StaticResource SecondaryColor}"/>
    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}"/>
    <SolidColorBrush x:Key="AccentHoverBrush" Color="{StaticResource AccentHoverColor}"/>
    <SolidColorBrush x:Key="AccentDarkBrush" Color="{StaticResource AccentDarkColor}"/>
    <SolidColorBrush x:Key="TextBrush" Color="{StaticResource TextColor}"/>
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="{StaticResource TextSecondaryColor}"/>
    <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}"/>
    <SolidColorBrush x:Key="InputBackgroundBrush" Color="{StaticResource InputBackgroundColor}"/>
    <SolidColorBrush x:Key="CardBackgroundBrush" Color="{StaticResource CardBackgroundColor}"/>
    
    <!-- Gradient Background -->
    <LinearGradientBrush x:Key="BackgroundGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#0d1117" Offset="0"/>
        <GradientStop Color="#161b22" Offset="0.5"/>
        <GradientStop Color="#1c2128" Offset="1"/>
    </LinearGradientBrush>

    <!-- Accent Gradient for buttons -->
    <LinearGradientBrush x:Key="AccentGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#2ea043" Offset="0"/>
        <GradientStop Color="#238636" Offset="1"/>
    </LinearGradientBrush>
    
</ResourceDictionary>
